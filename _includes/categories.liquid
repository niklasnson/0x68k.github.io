<div class="card tags mt-4">
  <div class="card-body">
    <h5 class="card-title border-bottom pb-3 mb-3">Categories</h5>
    <ul class="list-unstyled">
    {% for category in site.categories %}
      <li><a class="text-capitalize link-body-emphasis link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0" href='/archives/category/{{category|first}}'>{{ category|first }}</a></li>
    {% endfor %}
    </ul>
  </div>
</div>
