{% if page.latest_posts and page.latest_posts.enabled %}
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title border-bottom pb-3 mb-3">Latest Posts</h5>
      <ul class="list-unstyled">
      {% if page.latest_posts != blank %}
      {% assign latest_posts_size = site.posts | size %}
        {% assign latest_posts = site.posts %}
        {% if page.latest_posts.limit %}
          {% assign latest_posts_limit = page.latest_posts.limit %}
        {% else %}
          {% assign latest_posts_limit = latest_posts_size %}
        {% endif %}
        {% for item in latest_posts limit: latest_posts_limit %}
              {% if item.redirect == blank %}
                <li><a class="link-body-emphasis link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0" href="{{ item.url | relative_url }}">{{ item.title }}</a></li>
              {% elsif item.redirect contains '://' %}
                <li><a class="link-body-emphasis link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0" href="{{ item.redirect }}" target="_blank">{{ item.title }}</a></li>
              {% else %}
                <li><a class="link-body-emphasis link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0" href="{{ item.url }}">{{ item.title }}</a></li>
              {% endif %}
        {% endfor %}
      </ul>
      {% else %}
  {% endif %}
    </div>
  </div>
{% endif %}

